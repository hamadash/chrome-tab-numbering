{
  "manifest_version": 3,
  "name": "Chrome Tab Numbering",
  "description": "This extension temporarily adds sequential numbers to Chrome tab titles.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/number_1.png",
    "32": "icons/number_1.png",
    "48": "icons/number_1.png",
    "128": "icons/number_1.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Shift+Alt+N",
        "mac": "Shift+Alt+N"
      },
      "description": "Run extension."
    }
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
